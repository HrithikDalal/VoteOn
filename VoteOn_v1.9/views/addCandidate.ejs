<% include partials/header %>
<div style= "width : 30%; margin: 30px auto;">
    <h2 style="text-align;">Create a new Account</h2>
<form action="/addCandidate" method="POST">
  <div class="form-group" >
    <input type="Number" class="form-control"  name ="username"  placeholder="CandidateId" min="9991" step="1">
  </div>
  <div class="form-group" >
    <input type="text" class="form-control"  name ="firstName"  placeholder="First Name">
  </div>
  <div class="form-group" >
    <input type="text" class="form-control"  name ="lastName"  placeholder="Last Name">
  </div>
   <div class="form-group" >
    <input type="text" class="form-control"  name ="partyName"  placeholder="Party Name">
  </div>
 <div class="form-group" >
    <input type="text" class="form-control"  name ="avatar"  placeholder="Image url">
  </div>
  <button type="submit" class="btn btn-success btn-block">Submit</button>
</form>
</div>
<% include partials/footer %>